<h1 align="center">Listing all post</h1>
<% @posts.each do |post| %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="well well-lg">
    <div class="post-title">
     <%= link_to post.title, post_path(post) %>
    </div>
    <div class="post-body">
     </div>
    <div class="post-actions">
    <p><%= link_to 'Edit', edit_post_path(post), class: "btn btn-xs btn-primary" %> 
    <%= link_to 'Show', post_path(post), class: "btn btn-xs btn-success" %>
        <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %>    </div>
   </div>
  </div>
 </div>
<% end %>