<div class="container h-100">
   <div class="align-items-center justify-content-center h-100">
      <div class="col-xs-12 ">
        <div class="row">
          <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
              <div class="form-group">
                  <div class="control-label col-sm-3">
                    <%= f.label :title %>
                  </div>
                <div class="col-sm-6">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of post", autofocus: true %>
                </div>
              </div>
              <div class="form-group">
                <div class="control-label col-sm-3">
                  <%= f.label :body %>
                </div>
                <div class="col-sm-6">
                    <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Body of post" %>
                </div>
              </div>
              <div class="form-group">
                <center>
                    <div class="action">
                      <%= f.submit class: 'btn btn-primary btn-large' %>
                  </div>
                </center>
              </div>
          <%end%>
       </div>
    </div>
  </div> 
</div> 


 